<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context="net.pingfang.signalr.chat.fragment.AccountFragment">

    <TextView android:id="@+id/tv_account_item_settings"
        style="@style/SettingItemStyle"
        android:background="@drawable/selector_settings_item"
        android:text="@string/tv_account_item_settings"
        android:drawableRight="@drawable/setting_view_arrow"
        android:drawableEnd="@drawable/setting_view_arrow"/>

</LinearLayout>
